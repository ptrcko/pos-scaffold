<div class="grid-x align-center">
  <div class="large-4 medium-6 cell">
    <h1 class="text-4xl font-medium text-center">
      <%= modelName %> - {{ <%= modelName %>.id }}
    </h1>
    <table>
      <thead>
        <th>Field</th>
        <th>Value</th>
      </thead>
      <tbody>
        <% attributes.forEach((attr) => { -%>
        <tr>
          <td>{{ 'app.models.<%= modelNamePlural %>.form.<%= attr.name %>' | t }}
          <td>{{ <%= modelName %>.<%= attr.name %> }}</td>
        </tr>
        <% }); -%>
      </tbody>
    </table>
    <a href="/<%= modelNamePlural %>/edit?id={{ <%= modelName %>.id }}" class="button">
      {{ 'app.models.<%= modelNamePlural %>.edit' | t }}
    </a>
  </div>
</div>
