{% liquid
  if object.id
    assign method = 'put'
  else
    assign method = 'post'
  endif
%}
  <form action="/<%= modelNamePlural %>" method="post" class="">
    {% include 'modules/func/authenticity_token' %}
    <input type="hidden" name="_method" value="{{method}}" />

    {% if object.id %}
      <input type="hidden" name="<%= modelName %>[id]" value="{{ object.id }}" />
    {% endif %}

<% attributes.forEach((attr) => { -%>
    <div class="">
      <label class="block" for="<%= attr.name %>">{{ 'app.models.<%= modelNamePlural %>.form.<%= attr.name %>' | t }}</label>
      <input class="" type="<%= formFieldTypeMap[attr.type] %>" id="<%= attr.name %>" name="<%= modelName %>[<%= attr.name %>]" value="{{ object.<%= attr.name %> }}" autofocus required />
      {% include '<%= options.outputThemeFolder %>/<%= options.outputTheme %>/field_error', errors: object.errors.<%= attr.name %> %}
    </div>
<% }); -%>

    <button class="mt-8 button">{{ 'app.models.shared.submit' | t }}</button>
  </form>
