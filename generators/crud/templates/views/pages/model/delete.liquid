---
slug: <%= modelNamePlural %>
method: delete
---
{% liquid
  function object = '<%= options.outputLogicFolder %>/queries/<%= modelNamePlural %>/find', id: context.params.id
  function object = '<%= options.outputLogicFolder %>/commands/<%= modelNamePlural %>/delete', object: object

  if object.valid
    include 'modules/func/redirect_to', url: '/<%= modelNamePlural %>', notice: 'app.models.shared.deleted'
  else
    include 'modules/func/redirect_to', url: '/<%= modelNamePlural %>', error: 'app.models.shared.delete_failed'
  endif
%}
