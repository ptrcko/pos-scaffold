---
slug: <%= modelNamePlural %>
method: post
---
{% liquid

  include '<%= config.logicDependencyFolder %>/logged_in_or_redirect'

  function object = '<%= config.outputLogicFolder %>/commands/<%= modelNamePlural %>/create', object: context.params.<%= modelName %>
  if object.valid
    include 'modules/func/redirect_to', url: '/<%= modelNamePlural %>'
  else
    include '<%= config.outputThemeFolder %>/simple/<%= modelNamePlural %>/new', object: object
  endif
%}
