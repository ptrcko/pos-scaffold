---
slug: <%= modelNamePlural %>
method: put
---
{% liquid
  function object = '<%= options.outputLogicFolder %>/commands/call', object: context.params.<%= modelName %>, command: '<%= modelNamePlural %>/update', selection: 'record_update'
  if object.valid
    include 'modules/func/redirect_to', url: '/<%= modelNamePlural %>'
  else
    include '<%= options.outputThemeFolder %>/simple/<%= modelNamePlural %>/edit', object: object
  endif
%}
