---
slug: <%= modelNamePlural %>
method: put
---
{% liquid
  function object = 'lib/commands/call', object: context.params.<%= modelName %>, command: '<%= modelNamePlural %>/update', selection: 'model_update'
  if object.valid
    include 'redirect_to', url: '/<%= modelNamePlural %>'
  else
    include 'theme/simple/<%= modelNamePlural %>/edit', object: object
  endif
%}
